# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/august_indexer
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=august_indexer
DATABASE_USER=username
DATABASE_PASSWORD=password

# Blockchain RPC Endpoints
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_WS_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_KEY
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
AUGUSTIUM_RPC_URL=https://rpc.augustium.network

# API Keys
INFURA_API_KEY=your_infura_api_key
ALCHEMY_API_KEY=your_alchemy_api_key

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Storage Options
ENABLE_IPFS=false
IPFS_NODE_URL=http://localhost:5001
ARWEAVE_WALLET_PATH=./arweave-wallet.json

# ZK Proof Configuration
ENABLE_ZK_PROOFS=false
AUGUST_ZK_ENDPOINT=https://zk.augustium.network

# Plugin Configuration
PLUGINS_DIR=./plugins
ENABLE_ML_OPTIMIZATION=false
